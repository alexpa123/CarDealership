@model CarDealershipNew.Models.Models.LoanCarViewModel
@{
    ViewBag.Title = "GetDetails";
    var term = new List<SelectListItem>
{
new SelectListItem { Text = "1", Value = "1"},
new SelectListItem { Text = "2", Value = "2"},
new SelectListItem { Text = "3", Value = "3"},
new SelectListItem { Text = "4", Value = "4"},
new SelectListItem { Text = "5", Value = "5"},
new SelectListItem { Text = "6", Value = "6"},
new SelectListItem { Text = "7", Value = "7"}

};
}

<h2>Take it for a test drive!</h2>

<div class="vehicleRow">
    <div class="row">
        <div class="col-sm-3">
            <p>@Model.Car.Year @Model.Car.Make @Model.Car.Model</p>
            <img class="card-img-bottom" src="/Images/car.jpg" alt="Card image cap" />
            <p></p>
        </div>
        <div class="col-sm-3">
            <p>Body Style: @Model.Car.BodyStyle</p>
            <p>Transmission: @Model.Car.Transmission</p>
            <p>Color: @Model.Car.ExteriorColor</p>
        </div>
        <div class="col-sm-3">
            <p>Interior: @Model.Car.InteriorColor</p>
            <p>Mileage: @Model.Car.Mileage</p>
            <p>VIN: @Model.Car.VIN</p>
        </div>
        <div class="col-sm-3">
            <p>Sale Price: @Model.Car.Price</p>
            <p>MSRP: @Model.Car.MSRP</p>
            <a class="nav-link" href="http://localhost:54459/Home/Contact/?vin=@Model.Car.VIN">
                <button @*type="button"*@ class="btn btn-secondary">Contact Us</button>
            </a>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <div class="row">
                <div class="col-sm-3">
                </div>
                <div class="col-sm-9">
                    <p>Description: @Model.Car.Description</p>
                </div>
            </div>
        </div>
    </div>
</div>



<h2 id="calculaterHeader">Let's get you approved to take this one home!</h2>

<div id="calculatorBorder">
    <div class="form-group row">
        <div class="col-sm-1"><p>Loan Amount</p></div>
        <div class="col-sm-5">
            @Html.EditorFor(model => model.LoanAmount, new { htmlAttributes = new { @class = "form-control", @id = "loanAmount" } })
        </div>
        <div class="col-sm-2"><p>Monthly Payment : </p></div>
        <div class="col-sm-4">
            <input type="text" id="monthlyPayment" class="form-control" readonly/>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-1"><p>Interest %</p></div>
        <div class="col-sm-5">
            @Html.EditorFor(model => model.Interest, new { htmlAttributes = new { @class = "form-control", @id = "interest", value = 3.5 } })
        </div>
        <div class="col-sm-2"><p>Total Payment : </p></div>
        <div class="col-sm-4">
            <input type="text" id="totalPayment" class="form-control" readonly />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-1"><p>Term</p></div>
        <div class="col-sm-5">
            @Html.DropDownListFor(model => model.Term, term, new { @class = "form-control", @id = "term", value = 5 })
        </div>
        <div class="col-sm-2"><p>Total Interest : </p></div>
        <div class="col-sm-4">
            <input type="text" id="totalInterest" class="form-control" readonly/>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-12">
            <button type="submit" class="btn btn-secondary" id="calculateLoan">Calculate Loan</button>
        </div>
    </div>
</div>

